{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "C/C++ Runner: Debug Session",
		"type": "cppdbg",
		"request": "launch",
		"args": ["map_1.cub"],
		"stopAtEntry": false,
		"externalConsole": false,
		"cwd": "${workspaceFolder}",
		"program": "${workspaceFolder}/cub3d",
		"MIMode": "gdb",
		"miDebuggerPath": "gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		]
	  }
	]
  }